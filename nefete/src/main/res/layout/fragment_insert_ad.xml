<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="7">

  <org.kamol.nefete.ui.widgets.ExpandableGridView
      android:paddingTop="?attr/actionBarSize"
      android:id="@+id/gv_images"
      android:layout_row="1"
      android:layout_columnSpan="2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:columnWidth="90dp"
      android:horizontalSpacing="4dp"
      android:isScrollContainer="false"
      android:listSelector="@android:color/transparent"
      android:numColumns="3"
      android:stretchMode="columnWidth"
      android:verticalSpacing="4dp"
      />

  <EditText
      android:id="@+id/et_title"
      android:layout_row="2"
      android:layout_columnSpan="2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:hint="What are you selling?"
      android:inputType="text"
      />

  <EditText
      android:id="@+id/et_description"
      android:layout_row="3"
      android:layout_columnSpan="2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:hint="Item descriptions (256)"
      android:inputType="textMultiLine"
      android:lines="2"
      android:maxLines="2"
      />

<LinearLayout
      android:weightSum="100"
      android:layout_row="4"
      android:layout_columnSpan="2"
      android:layout_gravity="top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

  <EditText
      android:id="@+id/et_price"
      android:layout_weight="40"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:hint="Price"
      android:inputType="number"

      />
  <Spinner
      android:id="@+id/sp_currency"
      android:layout_weight="40"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:entries="@array/currency_array"
      />

  <Spinner
      android:id="@+id/sp_category"
      android:layout_weight="20"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:entries="@array/category_array"
      />
</LinearLayout>

  <Button
      android:id="@+id/btn_post"
      android:layout_row="5"
      android:layout_columnSpan="2"
      android:layout_column="0"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@color/nefeteColor"
      android:drawableBottom="@android:drawable/ic_menu_save"
      />
</GridLayout>