<?xml version="1.0" encoding="utf-8"?>

<org.kamol.shopafter.ui.gallery.ListingItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gallery_item_background"
    >
  <org.kamol.shopafter.ui.misc.ForegroundImageView
      android:id="@+id/fiv_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:foreground="@drawable/image_overlay"
      android:clickable="true"
      tools:src="#f00"
      />
  <TextView
      android:id="@+id/tv_price"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="bottom"
      android:gravity="bottom"
      android:background="@drawable/gradient_overlay"
      android:paddingLeft="20dp"
      android:paddingBottom="6dp"
      android:singleLine="true"
      android:ellipsize="end"
      tools:text="100"
      style="@style/Widget.ShopAfter.GalleryImage"
      />
  <TextView
      android:id="@+id/tv_currency"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_gravity="bottom"
      android:gravity="bottom"
      android:singleLine="true"
      android:ellipsize="end"
      android:paddingBottom="8dp"
      android:paddingLeft="5dp"
      tools:text="SGD"
      android:textSize="7sp"
      android:textColor="#fff"
      />
</org.kamol.shopafter.ui.gallery.ListingItemView>