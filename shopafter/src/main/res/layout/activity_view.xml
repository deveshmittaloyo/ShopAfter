<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:baselineAligned="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1.0"
              android:background="@color/white">

  <RelativeLayout
      android:layout_height="0dp"
      android:layout_width="match_parent"
      android:layout_weight="0.5">
    <ImageView
        android:id="@+id/iv_image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/shopafterColor"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        >
      <ImageButton
          android:id="@+id/ib_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_action_back"
          android:layout_alignParentLeft="true"
          android:background="@null"/>
      <ImageButton
          android:id="@+id/ib_share"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_action_share"
          android:layout_alignParentRight="true"
          android:background="@null"/>
      <TextView
          android:id="@+id/tv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/ib_back"
          android:layout_toLeftOf="@id/ib_share"
          android:paddingTop="3dp"
          android:textColor="@color/textColor"
          android:textSize="18sp"
          android:gravity="center"/>
    </RelativeLayout>
  </RelativeLayout>

  <RelativeLayout
      android:layout_height="wrap_content"
      android:layout_width="fill_parent">
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textFieldColor"
        android:textSize="13sp"
        android:padding="10dp"
        android:background="@drawable/border_bottom"
        />
  </RelativeLayout>
  <ListView
      android:id="@android:id/list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5"
      android:cacheColorHint="#00000000"
      android:divider="#00000000"
      android:listSelector="#00000000">
  </ListView>

  <RelativeLayout
      android:id="@+id/rl_write_bar"
      android:layout_height="50dp"
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      android:background="@color/shopafterPink"
      android:padding="10dp">
    <Button
        android:id="@+id/b_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_action_send"
        android:maxHeight="42dp"
        android:background="@null"/>
    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/b_message"
        android:hint="Send a private message to the seller"
        android:textColorHint="@color/chattingText"
        android:textColor="@color/chattingText"
        android:background="@drawable/etit_text_bg"
        android:textSize="13sp"/>
  </RelativeLayout>

  <Button
      android:id="@+id/b_delete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@color/shopafterPink"
      android:drawableTop="@android:drawable/ic_delete"
      android:paddingTop="5dp"
      android:maxHeight="42dp"
      android:visibility="gone"
      />
</LinearLayout>